{
    "rewrites": [
        {
            "source": "/:shortId((?!shorten|statistics|settings|inactive)[\\w\\-]{1,})",
            "has": [
                {
                    "type": "host",
                    "value": "www.easy-url.xyz"
                }
            ],
            "destination": "https://easyurlbackend.vercel.app/:shortId"
        },
        {
            "source": "/api/:match*",
            "destination": "https://easyurlbackend.vercel.app/api/:match*"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}

